# {{ ansible_managed }}

{% if program_override is defined %}
{% set program_exec = "{{ program_override }} {{ program_config_options|default('') }} --log-file=/var/log/glance/{{ program_name }}.log" %}
{% else %}
{% set program_exec = "{{ glance_bin }}/{{ program_name }} {{ program_config_options|default('') }} --log-file=/var/log/glance/{{ program_name }}.log" %}
{%- endif %}

[Unit]
Description=OpenStack Service
After=syslog.target
After=network.target

[Service]
Type=simple
User={{ system_user }}
Group={{ system_group }}
ExecStart={{ program_exec }}

# Give a reasonable amount of time for the server to start up/shut down
TimeoutSec=300
Restart=on-failure
RestartSec=150

[Install]
WantedBy=multi-user.target
